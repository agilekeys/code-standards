{
  "name": "agilekeys/code-standards",
  "description": "The coding standard of the PHP projects, includes PHPMD and PHPCS rules.",
  "keywords": [
    "coding",
    "standards",
    "cs",
    "codesniffer",
    "style",
    "sniffer",
    "rules",
    "sniffs",
    "checks",
    "massdetector"
  ],
  "homepage": "https://www.doctrine-project.org/projects/coding-standard.html",
  "license": "MIT",
  "authors": [
    {"name": "Duan Li", "email": "inputx@goodays.com"}
  ],
  "require": {
    "php": "^7.1",
    "phpmd/phpmd": "^2.6.0",
    "squizlabs/php_codesniffer": "^3.3.2",
    "slevomat/coding-standard": "^4.8.0"

  },
  "suggest": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
    "slevomat/coding-standard": "^4.8.0",
    "squizlabs/php_codesniffer": "^3.0",
    "loyaltycorp/standards": "dev-master"
  },
  "bin": [
    "check_standard",
    "standard.lib"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "6.0.x-dev"
    }
  }
}